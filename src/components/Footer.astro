---
import Icon from "./Icon.astro";
const currentYear = new Date().getFullYear();

// const today = new Date();
// const currentTime = today.toLocaleString("en-US", {
//   hour: "numeric",
//   minute: "numeric",
//   hour12: true,
// });

import "@fontsource/poppins/700.css";
import "@fontsource/mulish";
---

<footer>
  <div class="group">
    <p>&copy; {currentYear} Henry Matarrita</p>
    <!-- <p>Hora Local: {currentTime}</p> -->
  </div>
  <p class="socials">
    <a href="https://twitter.com/henry_jr_1"> Twitter</a>
    <a href="https://github.com/juniidev"> GitHub</a>
    <a href="https://instagram.com/_henry.jr"> Instagram</a>
  </p>
</footer>

<!-- Style Footer Section -->
<style>
  footer {
    display: flex;
    flex-direction: column;
    gap: 3rem;
    margin-top: auto;
    padding: 3rem 2rem 3rem;
    text-align: center;
    color: var(--black-shade);
    font-size: var(--text-size);
    background-color: var(--background-color);
    border-top: 1px solid var(--black-shade);
  }

  footer a {
    text-decoration: 1px solid underline transparent;
    text-underline-offset: 0.25em;
    color: var(--black-shade);
  }

  footer a:hover,
  footer a:focus {
    color: var(--header-color);
    text-decoration-color: currentColor;
    transition: all 0.3s ease;
  }
  .group {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .socials {
    font-family: "Poppins", sans-serif;
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }
  @media (min-width: 50em) {
    footer {
      flex-direction: row;
      justify-content: space-between;
      padding: 2.5rem 5rem;
    }
    .group {
      flex-direction: row;
      gap: 5rem;
      flex-wrap: wrap;
    }
    .socials {
      justify-content: flex-end;
    }
  }
</style>
